<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--TODO: Add support for Dark mode-->
    <style name="Theme.HackerNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!--Base Theme-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">?android:statusBarColor</item>

        <!--Type-->
        <item name="textAppearanceHeadline5">@style/Type.HackerNews.H5</item>
        <item name="textAppearanceHeadline6">@style/Type.HackerNews.H6</item>
        <item name="textAppearanceBody1">@style/Type.HackerNews.B1</item>
        <item name="textAppearanceBody2">@style/Type.HackerNews.B2</item>
        <item name="textAppearanceSubtitle1">@style/Type.HackerNews.S1</item>
        <item name="textAppearanceSubtitle2">@style/Type.HackerNews.S2</item>
        <item name="textAppearanceCaption">@style/Type.HackerNews.Caption</item>
        <item name="textAppearanceOverline">@style/Type.HackerNews.Overline</item>
        <item name="textAppearanceButton">@style/Type.HackerNews.Button</item>

        <!--Shape-->
        <item name="shapeAppearanceSmallComponent">@style/Shape.HackerNews.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.HackerNews.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.HackerNews.Large</item>

        <!--Dimens-->
        <item name="emphasisDisabled">0.38</item>
        <item name="emphasisMedium">0.67</item>
        <item name="emphasisHigh">0.85</item>
    </style>

    <!--FullScreen Theme-->
    <style name="Theme.HackerNews.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>