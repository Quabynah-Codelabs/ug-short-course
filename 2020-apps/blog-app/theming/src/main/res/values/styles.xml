<resources>
    <!--FAB-->
    <style name="Widget.Readium.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Readium.FAB</item>
    </style>

    <!--Button-->
    <style name="Widget.Readium.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/loader_height_small</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Readium.Button</item>
    </style>

    <style name="Widget.Readium.Button.Other">
        <item name="backgroundTint">@color/csl_button</item>
        <item name="android:textColor">@color/csl_button_text</item>
    </style>

    <style name="Widget.Readium.Button.Outlined">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <!--Chip-->
    <style name="Widget.Readium.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Readium.Chip</item>
        <item name="chipIcon">@drawable/ic_chip_icon</item>
        <item name="iconGravity">start</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="chipStrokeWidth">@dimen/stroke_width</item>
    </style>

    <!--Bottom App Bar-->
    <style name="Widget.Readium.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Readium.BottomAppBar</item>
        <item name="fabCradleRoundedCornerRadius">@dimen/spacing_large</item>
        <item name="fabCradleMargin">@dimen/spacing_mid</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="Widget.Readium.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">?textAppearanceHeadline5</item>
    </style>
</resources>